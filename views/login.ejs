<!-- Default form login -->
<form class="text-center border border-light p-5" action="/users/login" method="POST">

    <p class="h0 mb-0">Sign in</p>
    <%- include('./partials/messages.ejs'); %>

    <!-- Email -->
    <input type="email" id="defaultLoginFormEmail" class="form-control mb-4" name='email' placeholder="E-mail">

    <!-- Password -->
    <input type="password" id="defaultLoginFormPassword" class="form-control mb-4" name="password" placeholder="Password">

    <!-- Sign in button -->
    <button class="btn btn-info btn-block my-4" type="submit">Sign in</button>

    <p>Registered then Verify?
        <a href="/users/verify">Verify</a>
    </p>

    <!-- Register -->
    <p>Not a member?
        <a href="/users/register">Register</a>
    </p>

</form>
<!-- Default form login -->